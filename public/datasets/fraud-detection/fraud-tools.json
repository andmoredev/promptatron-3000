{
  "id": "fraud-detection-tools-enhanced",
  "datasetType": "fraud-detection",
  "version": "2.1.0",
  "description": "Enhanced fraud detection tools for comprehensive transaction analysis and risk management",
  "metadata": {
    "author": "Fraud Prevention Team",
    "created": "2024-01-15T10:00:00Z",
    "updated": "2024-01-20T15:30:00Z",
    "tags": ["fraud", "security", "risk", "transactions"],
    "documentation": "https://docs.example.com/fraud-tools",
    "changelog": {
      "2.1.0": "Added transaction monitoring and risk scoring tools",
      "2.0.0": "Enhanced account freezing with severity levels",
      "1.0.0": "Initial fraud dete tools"
    }
  },
  "tools": [
    {
      "toolSpec": {
        "name": "freeze_account",
        "description": "Immediately freeze an account to prevent further transactions due to suspected fraudulent activity. This action should be taken when there is strong evidence of fraud or when multiple risk indicators are present.",
        "inputSchema": {
          "json": {
            "type": "object",
            "properties": {
              "account_id": {
                "type": "string",
                "pattern": "^ACC-[0-9]{6}$",
                "description": "Account ID in format ACC-123456"
              },
              "transaction_ids": {
                "type": "array",
                "items": {
                  "type": "string",
                  "pattern": "^TXN-[0-9]{8}$"
                },
                "minItems": 1,
                "description": "List of suspicious transaction IDs that triggered this action"
              },
              "reason": {
                "type": "string",
                "minLength": 20,
                "description": "Detailed reason for account freeze including specific fraud indicators"
              },
              "severity": {
                "type": "string",
                "enum": ["low", "medium", "high", "critical"],
                "description": "Severity level of the suspected fraud"
              },
              "freeze_duration": {
                "type": "string",
                "enum": ["temporary", "pending_review", "permanent"],
                "description": "Duration type for the account freeze"
              },
              "notify_customer": {
                "type": "boolean",
                "description": "Whether to notify the customer about the account freeze"
              }
            },
            "required": ["account_id", "transaction_ids", "reason", "severity", "freeze_duration"]
          }
        }
      }
    },
    {
      "toolSpec": {
        "name": "flag_suspicious_transaction",
        "description": "Flag individual transactions for review without freezing the entire account. Use this for transactions that show potential fraud indicators but don't warrant immediate account suspension.",
        "inputSchema": {
          "json": {
            "type": "object",
            "properties": {
              "transaction_id": {
                "type": "string",
                "pattern": "^TXN-[0-9]{8}$",
                "description": "Transaction ID in format TXN-12345678"
              },
              "account_id": {
                "type": "string",
                "pattern": "^ACC-[0-9]{6}$",
                "description": "Associated account ID"
              },
              "fraud_indicators": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": [
                    "unusual_amount",
                    "unusual_location",
                    "unusual_time",
                    "velocity_check_failed",
                    "merchant_risk",
                    "device_fingerprint_mismatch",
                    "behavioral_anomaly",
                    "blacklist_match"
                  ]
                },
                "minItems": 1,
                "description": "Specific fraud indicators detected in this transaction"
              },
              "risk_score": {
                "type": "number",
                "minimum": 0,
                "maximum": 100,
                "description": "Calculated risk score for this transaction (0-100)"
              },
              "confidence_level": {
                "type": "string",
                "enum": ["low", "medium", "high"],
                "description": "Confidence level in the fraud detection"
              },
              "recommended_action": {
                "type": "string",
                "enum": ["monitor", "review", "block", "verify_with_customer"],
                "description": "Recommended action for this transaction"
              },
              "notes": {
                "type": "string",
                "description": "Additional notes about the suspicious activity"
              }
            },
            "required": ["transaction_id", "account_id", "fraud_indicators", "risk_score", "confidence_level", "recommended_action"]
          }
        }
      }
    },
    {
      "toolSpec": {
        "name": "create_fraud_alert",
        "description": "Create a fraud alert for patterns or behaviors that require immediate attention from the fraud investigation team. Use this for complex fraud schemes or when multiple accounts may be involved.",
        "inputSchema": {
          "json": {
            "type": "object",
            "properties": {
              "alert_type": {
                "type": "string",
                "enum": ["account_takeover", "identity_theft", "card_testing", "money_laundering", "organized_fraud", "synthetic_identity"],
                "description": "Type of fraud pattern detected"
              },
              "affected_accounts": {
                "type": "array",
                "items": {
                  "type": "string",
                  "pattern": "^ACC-[0-9]{6}$"
                },
                "minItems": 1,
                "description": "List of accounts involved in the fraud pattern"
              },
              "related_transactions": {
                "type": "array",
                "items": {
                  "type": "string",
                  "pattern": "^TXN-[0-9]{8}$"
                },
                "description": "List of transactions related to this fraud pattern"
              },
              "priority": {
                "type": "string",
                "enum": ["low", "medium", "high", "critical"],
                "description": "Priority level for investigation"
              },
              "description": {
                "type": "string",
                "minLength": 50,
                "description": "Detailed description of the fraud pattern and evidence"
              },
              "estimated_loss": {
                "type": "number",
                "minimum": 0,
                "description": "Estimated financial loss in USD"
              },
              "investigation_notes": {
                "type": "string",
                "description": "Initial investigation notes and recommended next steps"
              }
            },
            "required": ["alert_type", "affected_accounts", "priority", "description"]
          }
        }
      }
    },
    {
      "toolSpec": {
        "name": "update_risk_profile",
        "description": "Update the risk profile for an account based on new information or behavioral changes. This helps maintain accurate risk assessments for future transaction monitoring.",
        "inputSchema": {
          "json": {
            "type": "object",
            "properties": {
              "account_id": {
                "type": "string",
                "pattern": "^ACC-[0-9]{6}$",
                "description": "Account ID to update"
              },
              "risk_level": {
                "type": "string",
                "enum": ["very_low", "low", "medium", "high", "very_high"],
                "description": "New risk level for the account"
              },
              "risk_factors": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": [
                    "high_velocity_transactions",
                    "unusual_geographic_activity",
                    "new_device_usage",
                    "behavioral_changes",
                    "merchant_category_changes",
                    "time_pattern_changes",
                    "amount_pattern_changes"
                  ]
                },
                "description": "Risk factors that influenced the profile update"
              },
              "monitoring_level": {
                "type": "string",
                "enum": ["standard", "enhanced", "intensive"],
                "description": "Level of monitoring required for this account"
              },
              "update_reason": {
                "type": "string",
                "minLength": 20,
                "description": "Reason for updating the risk profile"
              },
              "valid_until": {
                "type": "string",
                "format": "date",
                "description": "Date until which this risk profile is valid (YYYY-MM-DD)"
              }
            },
            "required": ["account_id", "risk_level", "risk_factors", "monitoring_level", "update_reason"]
          }
        }
      }
    }
  ]
}
