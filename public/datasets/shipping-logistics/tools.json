{
  "id": "shipping-logistics-tools",
  "datasetType": "shipping-logistics",
  "description": "Tools for autonomous shipping exception handling and decision-making",
  "version": "1.0.0",
  "metadata": {
    "author": "Allen Helton",
    "changelog": {
      "1.0.0": "Initial creation"
    }
  },
  "tools": [
    {
      "toolSpec": {
        "name": "getCarrierStatus",
        "description": "Get the current carrier status and exception notes for an order",
        "inputSchema": {
          "json": {
            "type": "object",
            "properties": {
              "orderId": {
                "type": "string",
                "description": "Order ID to query"
              }
            },
            "required": ["orderId"]
          }
        }
      }
    },
    {
      "toolSpec": {
        "name": "getPackageContents",
        "description": "Get contents and hazard classification for a package",
        "inputSchema": {
          "json": {
            "type": "object",
            "properties": {
              "orderId": {
                "type": "string",
                "description": "Order ID to query"
              }
            },
            "required": ["orderId"]
          }
        }
      }
    },
    {
      "toolSpec": {
        "name": "getCustomerTier",
        "description": "Get customer tier and account standing",
        "inputSchema": {
          "json": {
            "type": "object",
            "properties": {
              "orderId": {
                "type": "string",
                "description": "Order ID to query"
              }
            },
            "required": ["orderId"]
          }
        }
      }
    },
    {
      "toolSpec": {
        "name": "getSLA",
        "description": "Get SLA deadline and penalty information",
        "inputSchema": {
          "json": {
            "type": "object",
            "properties": {
              "orderId": {
                "type": "string",
                "description": "Order ID to query"
              }
            },
            "required": ["orderId"]
          }
        }
      }
    },
    {
      "toolSpec": {
        "name": "getExpediteQuote",
        "description": "Get cost and ETA for expedited shipping options",
        "inputSchema": {
          "json": {
            "type": "object",
            "properties": {
              "orderId": {
                "type": "string",
                "description": "Order ID to query"
              },
              "speed": {
                "type": "string",
                "enum": ["overnight", "same-day"],
                "description": "Expedite speed: overnight (next business day) or same-day (within hours)"
              }
            },
            "required": ["orderId", "speed"]
          }
        }
      }
    },
    {
      "toolSpec": {
        "name": "expediteShipment",
        "description": "Execute expedited shipping for an order. Use when perishable goods need faster delivery or SLA is at risk.",
        "inputSchema": {
          "json": {
            "type": "object",
            "properties": {
              "orderId": {
                "type": "string",
                "description": "Order ID to expedite"
              },
              "speed": {
                "type": "string",
                "enum": ["overnight", "same-day"],
                "description": "Expedite speed"
              },
              "reason": {
                "type": "string",
                "description": "Brief justification for expediting"
              }
            },
            "required": ["orderId", "speed", "reason"]
          }
        }
      }
    },
    {
      "toolSpec": {
        "name": "holdForPickup",
        "description": "Hold order at carrier facility for customer pickup. Use for hazmat or when delivery attempts are exhausted.",
        "inputSchema": {
          "json": {
            "type": "object",
            "properties": {
              "orderId": {
                "type": "string",
                "description": "Order ID to hold"
              },
              "reason": {
                "type": "string",
                "description": "Brief justification for holding"
              }
            },
            "required": ["orderId", "reason"]
          }
        }
      }
    },
    {
      "toolSpec": {
        "name": "escalateToManager",
        "description": "Escalate decision to human manager when situation is ambiguous or high-risk.",
        "inputSchema": {
          "json": {
            "type": "object",
            "properties": {
              "orderId": {
                "type": "string",
                "description": "Order ID to escalate"
              },
              "reason": {
                "type": "string",
                "description": "Why this requires human judgment"
              },
              "urgency": {
                "type": "string",
                "enum": ["low", "medium", "high"],
                "description": "Urgency level for manager review"
              }
            },
            "required": ["orderId", "reason"]
          }
        }
      }
    },
    {
      "toolSpec": {
        "name": "noActionRequired",
        "description": "Document that no intervention is needed. Use when standard delivery process should continue.",
        "inputSchema": {
          "json": {
            "type": "object",
            "properties": {
              "orderId": {
                "type": "string",
                "description": "Order ID"
              },
              "reason": {
                "type": "string",
                "description": "Why no action is appropriate"
              }
            },
            "required": ["orderId", "reason"]
          }
        }
      }
    }
  ]
}
